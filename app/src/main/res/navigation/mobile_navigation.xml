<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jrms.summing.ui.spend.SpendFragment"
        android:label="@string/title_spend"
        tools:layout="@layout/fragment_spend" >

        <action
            android:id="@+id/navigation_addSpend"
            app:destination="@id/addSpendFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jrms.summing.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.jrms.summing.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/addSpendFragment"
        android:name="com.jrms.summing.ui.addSpend.AddSpendFragment"
        android:label="@string/addSpend"
        tools:layout="@layout/add_spend_fragment" >

        <action
            android:id="@+id/navigation_location"
            app:destination="@id/locationFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.jrms.summing.ui.location.LocationFragment"
        android:label="@string/setLocation"
        tools:layout="@layout/add_spend_fragment" >
        <argument
            android:name="latitude"
            app:argType="string"
            android:defaultValue="0.0" />
        <argument
            android:name="longitude"
            app:argType="string"
            android:defaultValue="0.0" />
        <argument
            android:name="type"
            app:argType="boolean"
            android:defaultValue="true"
            />
    </fragment>
</navigation>